  try {
      var result = db.query("SELECT TRUMP,RUBIE,CRUZ,CLINTON,BERNIE,CDate FROM SentimentRate");
  } catch (e) {
      log.error("Error fletching data from SentimentRate table in sentimentgrapg.jag " + e.message);
      db.close();
